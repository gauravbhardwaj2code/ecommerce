<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.299988dip"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@id/imageurl"
            android:layout_width="127.0dip"
            android:layout_height="117.0dip"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/foodimg2"
            app:riv_corner_radius="4.0dip"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="Sketch from A to Z: Become an App Desiâ€¦."
                android:textColor="#ff26282a"
                android:textSize="14.0sp" />

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/teacher_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="John Doe"
                android:textColor="@color/md_orange_800"
                android:textSize="11.699982sp" />

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/category_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="John Doe"
                android:textColor="@color/md_blue_600"
                android:textSize="11.699982sp" />

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/language"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="Hindi"
                android:textColor="#ff828282"
                android:textSize="11.699982sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:layout_marginBottom="6.299988dip"
                android:orientation="horizontal"
                android:paddingLeft="8.299988dip">

                <com.lms.exam.fonts.MyTextView_Roboto_Medium
                    android:id="@id/selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.299988dip"
                    android:text="$49"
                    android:textSize="15.0sp" />

                <com.lms.exam.fonts.MyTextView_Roboto_Light
                    android:id="@id/cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/cutprice"
                    android:textSize="11.699982sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="8.299988dip"
                    android:background="@drawable/rect2"
                    android:orientation="horizontal"
                    android:paddingLeft="4.299988dip"
                    android:paddingTop="1.2999878dip"
                    android:paddingRight="4.299988dip"
                    android:paddingBottom="1.2999878dip">

                    <ImageView
                        android:id="@id/r2imageView2"
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.0"
                        android:src="@drawable/star" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3.2999878dip"
                        android:text="4.5"
                        android:textColor="#ff26282a"
                        android:textSize="11.699982sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="8.299988dip"
        android:background="#ffe3e3e3" />
</LinearLayout>



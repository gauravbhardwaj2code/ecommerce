<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_marginRight="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:elevation="4.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/imageurl"
                    android:layout_width="220.0dip"
                    android:layout_height="150.0dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/foodimg2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom|center"
                    android:layout_marginBottom="20.0dip"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="75.0dip"
                            android:layout_height="17.0dip"
                            android:layout_marginLeft="14.0dip"
                            android:layout_marginTop="15.0sp"
                            android:background="@drawable/curv_shape"
                            android:orientation="horizontal">

                            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10.0dip"
                                android:paddingLeft="3.0dip"
                                android:paddingTop="1.0dip"
                                android:paddingRight="3.0dip"
                                android:paddingBottom="1.0dip"
                                android:text="BEST SELLER"
                                android:textColor="#ff069661"
                                android:textSize="9.0sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="Sketch from A to Z: Become an App Desiâ€¦."
                android:textColor="#ff26282a"
                android:textSize="15.0sp" />

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/teacher_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="John Doe"
                android:textColor="@color/md_orange_800"
                android:textSize="11.699982sp" />

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/category_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="John Doe"
                android:textColor="@color/md_blue_600"
                android:textSize="11.699982sp" />

            <com.lms.exam.fonts.MyTextView_Roboto_Regular
                android:id="@id/language"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:paddingLeft="8.299988dip"
                android:text="xxxx"
                android:textColor="#ff828282"
                android:textSize="11.699982sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:layout_marginBottom="6.299988dip"
                android:orientation="horizontal"
                android:paddingLeft="8.299988dip">

                <com.lms.exam.fonts.MyTextView_Roboto_Medium
                    android:id="@id/selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.299988dip"
                    android:text="$00"
                    android:textSize="15.0sp" />

                <com.lms.exam.fonts.MyTextView_Roboto_Light
                    android:id="@id/cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/cutprice"
                    android:textSize="11.699982sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="8.299988dip"
                    android:background="@drawable/rect2"
                    android:orientation="horizontal"
                    android:paddingLeft="4.299988dip"
                    android:paddingTop="1.2999878dip"
                    android:paddingRight="4.299988dip"
                    android:paddingBottom="1.2999878dip">

                    <ImageView
                        android:id="@id/r1imageView2"
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.0"
                        android:src="@drawable/star" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3.2999878dip"
                        android:text="4.5"
                        android:textColor="#ff26282a"
                        android:textSize="11.699982sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
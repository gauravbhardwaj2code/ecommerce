<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10.0sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.gaurav.commerce.fonts.MyTextView_Roboto_Regular
            android:id="@id/index"
            android:textSize="15.0sp" android:textColor="@color/txt_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15.0sp" android:layout_weight="1.0">
            <com.gaurav.commerce.fonts.MyTextView_Roboto_Regular
                android:textSize="14.0sp"
                android:textColor="@color/txt_color"
                android:id="@id/lecture_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrary to popular belief" />
            <com.gaurav.commerce.fonts.MyTextView_Roboto_Regular
                android:textSize="10.0sp"
                android:textColor="#ff828282"
                android:id="@id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:20 mins" />
            <com.gaurav.commerce.fonts.MyTextView_Roboto_Regular
                android:textSize="10.0sp"
                android:textColor="@color/red"
                android:id="@id/resourcetype"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF" />



        </LinearLayout>

        <com.gaurav.commerce.fonts.MyTextView_Roboto_Regular
            android:textSize="11.699982sp"
            android:id="@id/mark_free"
            android:textColor="@color/green"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview" />


    </LinearLayout>
    <View android:background="@color/view_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="9.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip" />



</LinearLayout>
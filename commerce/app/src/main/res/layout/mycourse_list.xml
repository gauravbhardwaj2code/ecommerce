<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10.0dip">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@id/imageurl"
                    android:layout_width="77.69998dip"
                    android:layout_height="77.69998dip"
                    android:src="@drawable/code_img"
                    app:siRadius="6.0dip"
                    app:siSquare="true" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/title"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:text="@string/the_complete_ios_10_swift_3_developer_course"
                        android:textColor="@color/txt_color"
                        android:textSize="14.0sp" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/teacher_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/sub_txt_color"
                        android:textSize="11.699982sp" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/currentPosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="Section 5: Lecture 8 How to defâ€¦ "
                        android:textColor="@color/sub_txt_color"
                        android:textSize="11.699982dip" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/modecourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="Offline"
                        android:textColor="@color/md_blue_700"
                        android:textSize="11.699982dip" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/expiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="20-19-2000"
                        android:textColor="@color/md_red_600"
                        android:textSize="11.699982dip" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@id/circle_progress"
                        android:layout_width="71.0dip"
                        android:layout_height="71.0dip"
                        app:cpb_background_progressbar_color="#ffffcdd2"
                        app:cpb_background_progressbar_width="5.0dip"
                        app:cpb_progressbar_color="#fff44336"
                        app:cpb_progressbar_width="10.0dip" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:id="@id/circle_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5.0dip"
                        android:gravity="center"
                        android:text="65%"
                        android:textColor="@color/sub_txt_color"
                        android:textSize="12.0sp" />

                    <com.lms.exam.fonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5.0dip"
                        android:gravity="center"
                        android:text="Complete"
                        android:textColor="@color/sub_txt_color"
                        android:textSize="8.0sp" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@color/view_line" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

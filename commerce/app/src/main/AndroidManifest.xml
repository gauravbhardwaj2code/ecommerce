<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lms.exam">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name="com.lms.exam.init.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.lms.exam.PaymentWebView"></activity>
        <activity android:name="com.lms.exam.InstaMojoPayment" />
        <activity
            android:name="com.lms.exam.activities.CategoryCourse"
            android:label="@string/title_activity_category_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lms.exam.activities.AppWebView"
            android:label="@string/title_activity_web_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lms.exam.activities.course.detail.BuyCourse"
            android:label="@string/title_activity_buy_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lms.exam.activities.course.detail.CourseDetail"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/title_activity_course_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lms.exam.activities.HomePageWithBottomNavigation"
            android:label="@string/title_activity_home_page_with_bottom_navigation" />
        <activity
            android:name="com.lms.exam.activities.VideoLanding"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:label="@string/title_activity_video_landing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lms.exam.activities.MobileNoWithOtp"
            android:label="@string/title_activity_mobile_no_with_otp"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="MyDatabase.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.lms.exam.Notification" />
        <!--
        Add the following to your AndroidManifest.xml to prevent the launching of your main Activity
        if you are calling startActivity above.
        -->
        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE" />

        <activity
            android:name="com.lms.exam.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lms.exam.Register"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.lms.exam.MainActivity"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.lms.exam.HelpCenter"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.Profile"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.Cart"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.UpdateData"
            android:theme="@style/WhiteTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.lms.exam.ForgotPassword"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.lms.exam.NotificationActivity"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.prodcutscategory.Cards"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.IndividualProduct"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.Wishlist"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.OrderDetails"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.OrderPlaced"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.prodcutscategory.Tshirts"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.prodcutscategory.Bags"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name="com.lms.exam.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>